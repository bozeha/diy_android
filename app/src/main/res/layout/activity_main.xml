<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_main_cont"
    package="net.simplifiedcoding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/darker_gray"
    android:minHeight="10000px"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/top_main_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_img"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/full_main_Cont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_main_img"
        android:layout_weight="20"
        android:orientation="vertical"


        >

        <ListView
            android:id="@+id/main_cont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#ff7ab59c"
            android:dividerHeight="2dp"
            android:listSelector="@drawable/list_selector"
            android:visibility="visible"></ListView>

        <LinearLayout
            android:id="@+id/place_holder_for_guid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


</LinearLayout>